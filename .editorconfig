# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{php,html,twig,yaml,yaml.dist,yml,yml.dist,neon,xml,xml.dist,neon,neon.dist}]
indent_size = 4

[Makefile]
indent_size = 4
indent_style = tab

[{composer.json,composer.lock}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
